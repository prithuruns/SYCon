<?xml version="1.0" encoding="utf-8"?>
<org.edc.sycon.View.VerticalPager xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_vertical_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/main_top_fragment"
        class="org.edc.sycon.Fragments.TopFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/main_central_fragment"
        class="org.edc.sycon.Fragments.CentralCompositeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/main_bottom_fragment"
        class="org.edc.sycon.Fragments.BottomFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</org.edc.sycon.View.VerticalPager>